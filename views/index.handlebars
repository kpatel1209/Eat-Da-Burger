<div class="container">
    
    <h1 class="text-center">Eat Da Burger</h1>

    <div class="row">
        <div class="col-12 col-lg-4 mb-5 text-center task">
            <div class="row">
                <div class="col-11">
                    <h2 class="mb-4">Add Your Burger:</h2>
                    <form action="{{action}}" method="POST">
                        <div class="form-group py-3 mb-4">
                            <label for="burger_name">Burger name</label>
                            <input type="hidden" name="id" value="{{id}}">
                            <input type="text" class="form-control form-control-lg" id="burger_name" name="name" value="{{name}}" required>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-info" id="button_submit" title="Click to submit.">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4 mb-5">
            <h2 class="mb-5">To Be Devoured:</h2>
                {{#each burger_data}}
                    {{#unless this.devoured}}
                    <div class="row mb-2 burgers">
                            <p class="toBeDevoured">{{this.burger_name}}</p>
                        </div>
                <div class="col-md-3 text-center">
                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                        <br>
                        <button type="submit" class="btn btn-default">Devour It!</button>
                    </form>
                </div>
                    {{/unless}}
                {{/each}}
            </div>
        </div>        
        
        <div class="col-12 col-lg-4 mb-5 text-center task">
            {{#each burger_data}}
                {{#if this.devoured}}
                    <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>