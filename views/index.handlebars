<div class="container">
    
    <h1 class="text-center">Eat Da Burger</h1>
    

    <div class="row">

        <div class="col-12 col-lg-4 mb-5 text-center task">
            <div class="row">
                <div class="col-11">
                    <h2 class="mb-4">Add Your Burger:</h2>
                    <form action="/burgers/create" method="POST">
                        <div class="form-group py-3 mb-4">
                            <input type="text" class="form-control form-control-lg" value="" id="enter_text" name="burger_name" placeholder="Enter Burger Name" required>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary submit" id="button_submit" title="Click to submit.">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4 mb-5 text-center task">
            <div class="row">
                <div class="col-11">
                    <h2 class="mb-5 text-center">To Be Devoured:</h2>
                        {{#each burger_data}}
                            {{#unless this.devoured}}
                                <div class="row mb-2">
                                    <div class="col-11 mb-2 text-center">
                                        <form action="/burgers/update?_method=PUT" method="POST" class="button-size">
                                            <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                                            <button type="submit" class="btn btn-success toDevour" title="Click to Devour!">{{this.burger_name}}</button>
                                        </form>
                                    </div>
                                </div>
                            {{/unless}}
                        {{/each}}
                </div>
            </div>
        </div>        
        
        <div class="col-12 col-lg-4 mb-5 text-center task">
            <div class="row">
                <div class="col-11">
                    <h2 class="mb-5 text-center">Already Devoured:</h2>
                        {{#each burger_data}}
                            {{#if this.devoured}}
                                <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
                            {{/if}}
                        {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>